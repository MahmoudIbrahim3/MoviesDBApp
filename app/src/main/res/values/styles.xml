<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LargeTextView" parent="AppTheme">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/size_large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryTextView" parent="AppTheme">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/size_primary_text</item>
    </style>

    <style name="SecondaryTextView" parent="AppTheme">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/size_secondary_text</item>
    </style>

</resources>